doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Login
    link(rel='icon', type='image/jpg', href='/img/chat.ico')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    style.
      *{box-sizing: border-box;}
      body{padding: 0;}
      .wrapper{width: 100%;height: 100%;}
      .container{display: flex; justify-content: center; align-items: center; margin: 50px;}
      input{padding: 5px; border-radius: 4px;}
  body
    .wrapper
      .container
        h3 login
        form#login_user(method='post', action='login')
          input(placeholder='email', name='email', type='email')
          input(placeholder='password', name='password', type='password')
          input(name='login', type='hidden', value='true')
          input(type='submit', value='Войти')
      p
        | or you can 
        a(href='registration') registr 
    script(src="/js/libs/jquery.min.js")
    script(src="/js/login.js")