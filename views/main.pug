include mixins
doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title!=nickname
    meta(name='viewport', content='width=device-width, initial-scale=1')
    style.
      .wrapper{
      display: flex;
      }
      .main-menu{width: 20%;}
      iframe{width: 100%; height: 600px; border: 1px solid #000;}
  body
    .wrapper
      include _side-menu
      if target == 'me'
         +my_profile(nickname, avatar, about, id)
      else
         +other_profile(nickname, avatar, about, id)
